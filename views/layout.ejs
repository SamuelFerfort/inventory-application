<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= typeof title != 'undefined' ? title : 'Default Title' %></title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #f8f9fa; 
      }
      main {
        flex: 1;
      }
      .sidebar {
        background-color: #e9ecef;
        border-right: 1px solid #dee2e6;
        padding-top: 20px;
        height: 100vh;
      }
      .sidebar .nav-link {
        color: #333;
        padding: 0.5rem 1rem;
      }
      .sidebar .nav-link:hover {
        background-color: #dee2e6;
      }
      .sidebar .separator {
        height: 1px;
        background-color: #adb5bd;
        margin: 10px 0;
      }
      .food-card {
        height: 100%;
      }
      .food-card img {
        width: 100%;
        height: auto;
        border-radius: 8px 8px 0 0;
      }
    </style>
  </head>
  <body>
    <header class="bg-dark text-white py-3">
      <div class="container">
        <h1 class="text-center mb-0">SuperMarket</h1>
      </div>
    </header>

    <main class="flex-grow-1">
      <div class="container-fluid">
        <div class="row">
          <aside class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky">
              <ul class="nav flex-column">
                <li class="nav-item">
                  <a class="nav-link" href="/">All categories</a>
                </li>
                <% categories.forEach(function(category) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/catalog/category/<%= category.id %>"
                    ><%= category.name %></a
                  >
                </li>
                <% }); %>
                <li><div class="separator"></div></li>
                <li class="nav-item">
                  <a class="nav-link" href="/catalog/category/create"
                    >Add category</a
                  >
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/catalog/food/create">Add food</a>
                </li>
              </ul>
            </div>
          </aside>

          <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="main-content"><%- body %></div>
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-light py-3 mt-auto">
      <div class="container">
        <p class="text-center mb-0">&copy; SuperMarket</p>
      </div>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
